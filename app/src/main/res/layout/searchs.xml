<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constantine"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/cardy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="2dp"
        android:layout_margin="8dp"
        app:cardBackgroundColor="@android:color/white"


        >


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/search_view"
            app:iconifiedByDefault="false"
            android:background="#00000000"
            android:hint="@string/audio_hint"
            android:queryHint="@string/audio_hint"
            app:defaultQueryHint="#777"
            app:queryBackground="@android:color/transparent"
            android:imeOptions="actionSearch"
            android:inputType="none"
            android:padding="12dp"
            android:drawableStart="@drawable/ic_search_black"
            android:drawablePadding="10dp"
            android:focusableInTouchMode="false"



            >



        </EditText>
    </android.support.v7.widget.CardView>

    
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardy"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        >
        
        
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/ic_search_mascot"
            android:layout_gravity="center_horizontal"
            android:tint="@android:color/primary_text_light"
            />


        <TextView
            android:id="@+id/titlez"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@android:color/primary_text_light"
            android:textSize="18sp"
            android:text="@string/audio_display"
            />

        <TextView
            android:id="@+id/sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@android:color/tertiary_text_light"
            android:textSize="16sp"
            android:text="@string/audio_message"
            />
        
    </LinearLayout>




</RelativeLayout>
