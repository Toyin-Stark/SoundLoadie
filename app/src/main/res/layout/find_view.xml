<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99000000"
    android:orientation="vertical"
    android:id="@+id/constantine"
    tools:context="com.ware.soundloadie.activities.FindView">



    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:elevation="5dp"
        >

        <android.support.v7.widget.SearchView
            android:id="@+id/findwidget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:iconifiedByDefault="false"
            app:searchHintIcon="@null"
            app:searchIcon="@null"
            android:background="@android:color/transparent"
            app:queryBackground="@android:color/transparent"
            app:queryHint="@string/audio_hint"
            android:gravity="start"

            />



    </android.support.v7.widget.Toolbar>


    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_below="@+id/toolbarx"
        android:visibility="gone"
        android:background="@android:color/white"
        >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"

            >

            <lib.kingja.switchbutton.SwitchMultiButton
                android:id="@+id/switchtabs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                app:strokeRadius="5dp"
                app:strokeWidth="1dp"
                app:selectedTab="0"
                app:selectedColor="@android:color/tertiary_text_light"
                app:switchTabs="@array/switch_tabs"
                android:layout_gravity="center_horizontal"
                app:textSize="18sp" />



            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                android:layout_marginTop="10dp"

                />

        </LinearLayout>




    </android.support.v4.widget.SwipeRefreshLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/bum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/colorDark"
        android:layout_margin="8dp"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        >

        <include layout="@layout/miniplayer"/>


    </android.support.v7.widget.CardView>

</RelativeLayout>
