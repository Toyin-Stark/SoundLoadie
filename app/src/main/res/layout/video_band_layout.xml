<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    >



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/image"
            android:layout_width="66dp"
            android:layout_height="66dp"
            app:civ_border_width="2dp"
            app:civ_border_color="#d2d2d2"
            android:layout_gravity="center"

            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/videoTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                />


            <TextView
                android:id="@+id/channelTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                />



        </LinearLayout>



    </LinearLayout>


    <TextView
        android:id="@+id/vieews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:drawableStart="@drawable/ic_remove"
        android:drawablePadding="6dp"
        android:visibility="gone"

        />

    <LinearLayout
        android:id="@+id/like_base"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/likes__"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:drawableStart="@drawable/ic_thumb_up"
            android:drawablePadding="6dp"

            />


        <TextView
            android:id="@+id/dislikes__"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:drawableStart="@drawable/ic_thumb_down"
            android:drawablePadding="6dp"

            />



    </LinearLayout>

</LinearLayout>
